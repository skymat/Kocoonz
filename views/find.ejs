<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Kocoonz</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/stylish-portfolio.css" rel="stylesheet">
    <link href="css/mystyles.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
  
    <script src="https://unpkg.com/leaflet@1.0.3/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.0.3/dist/leaflet.css" />
  
</head>

<body>

    <!-- Navigation -->
    <%- include('nav'); %>

    <!-- Header -->
    <div style="position: fixed; z-index: 25"> 
      <header id="top" class="header" style="height: 50px;">
          <div class="text-vertical-center">
            <div class="container">
                <form>
                  <div class="row">
                      <div class="col-xs-offset-1 col-xs-4">
                        <input type="text" class="form-control" name="destination" placeholder="Destination">
                      </div>
                      <div class="col-xs-2">
                        <input type="date" class="form-control" name="date_debut" placeholder="date de début">
                      </div>
                      <div class="col-xs-2">
                        <input type="date" class="form-control" name="date_fin" placeholder="date de fin">
                      </div>
                      <div class="col-xs-2">
                        <input type="submit" class="btn btn-dark" value="Rechercher">
                      </div>
                   </div>
                 </form>
                 <div class="message-to-user" id="message"><%=message%></div>
              </div>
          </div>
      </header>

      <!-- About -->
      <section id="about" style="background-color: #FFFFFF">
          <div class="container">
             <div class="row">
                <div class="col-xs-6">
                  <h3><%= total %> locations</h3>
                </div>
              </div>
          </div>
          <!-- /.container -->
      </section>
    </div>
    
    <section id="location" style="padding-top:120px;">                  
        <div class="container">    
            <div class="row">
              <div class="col-xs-8">
                <div class="row">
                
                <%	
                  var total = 0;	        
                    for (var i = 0; i < apparts.length; i++){	
                      total ++;							
                  %>
                    <div class="col-xs-4">
                      <div class="thumbnail">
                        <img class="img-responsive" src="<%= "static/"+apparts[i]._id+"/"+apparts[i].photo_name%>">
                        <div class="caption">
                          <h5><%= apparts[i].titre%></h5>
                          <p><span> <%= apparts[i].prix%>€ - </span> <%= apparts[i].description%></p>
                          <div class="text-center"><a href="#" class="btn btn-dark" role="button">Reserver</a></div>
                        </div>
                      </div>
                    </div>
                  <%
                    }
                %>
  
                </div>
              </div>
              <!-- /.row -->
              <div class="col-xs-4">
                <div id="mapid" style="width: 250px; height:350px; position:fixed;">  
                 
                </div>
              </div>
            </div>
        </div>
    </section>
    
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 text-center">
                    <h4><strong>Start Bootstrap</strong>
                    </h4>
                    <p>3481 Melrose Place
                        <br>Beverly Hills, CA 90210</p>
                    <ul class="list-unstyled">
                        <li><i class="fa fa-phone fa-fw"></i> (123) 456-7890</li>
                        <li><i class="fa fa-envelope-o fa-fw"></i> <a href="mailto:name@example.com">name@example.com</a>
                        </li>
                    </ul>
                    <br>
                    <ul class="list-inline">
                        <li>
                            <a href="#"><i class="fa fa-facebook fa-fw fa-3x"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-twitter fa-fw fa-3x"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-dribbble fa-fw fa-3x"></i></a>
                        </li>
                    </ul>
                    <hr class="small">
                    <p class="text-muted">Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </div>
        <a id="to-top" href="#top" class="btn btn-dark btn-lg"><i class="fa fa-chevron-up fa-fw fa-1x"></i></a>
    </footer>

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="js/map.js"></script>
    <script src="js/script.js"></script>
    <script src="js/myscripts.js"></script>

</body>

</html>
